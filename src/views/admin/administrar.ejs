<!doctype html>
<link rel="stylesheet" href="/css/administrar.css">
<html lang="es">
  <%- include('../partials/head.ejs') %>    
<body>
    <main class="container-fluid">
      <%- include('../partials/header.ejs') %>
      <!--Administrador de productos-->
      <br>
      <section class="row">
        <!-- <article class="col-12-titulo"> -->
          <h2 class="Administrador-Productos">Administrador de Productos<i class="fa-brands fa-product-hunt"></i></h2>
        <!-- </article> -->
        <!-- <article class="col-12-Agregar"> -->
         <div>
          <a href="/administrar/product/create" class="col-12-Agregar"><ion-icon name="add-circle-outline"></ion-icon>Agregar producto</a> 
          </div>
       <!--  </article> -->
        <!-- <article class="col-12-table" > -->
        <div class="contenedor-table">
        <table class="table">
            <thead>
              <tr class="Barra-nombres">
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Ver</th>
                <th scope="col">Editar</th> 
                <th scope="col">Borrar</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product => { %>
              <tr>
                <td><%= product.id%> </td>
                <td><%= product.name%> </td>
                <td><a href="/administrar/product/detail/<%= product.id%> "> <ion-icon name="eye-outline"></ion-icon></a></td>
                <td><a href="/administrar/product/edit/<%= product.id%> "> <ion-icon name="pencil-outline"></ion-icon></a></td>
                <td>
                  <form action="/administrar/product/delete/<%= product.id%>?_method=DELETE" method="POST">
                  <button type="submit"><ion-icon name="trash-outline"></ion-icon></button>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table> 
        </div>
        <!-- </article>    -->    
      </section>
      <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>